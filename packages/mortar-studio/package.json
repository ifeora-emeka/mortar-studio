{
  "name": "mortar-studio",
  "version": "0.0.15",
  "description": "An npm package for serving the MortarStudio",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "dev:watch": "tsc --watch",
    "dev": "cross-env LOCAL_DEV=true concurrently \"npm run dev:watch\" \"nodemon dist/server/index.js\"",
    "build": "rm -rf dist && tsc && cp -r designer dist/designer",
    "start": "node dist/server/index.js",
    "prepublishOnly": "npm run build && npm version patch",
    "local": "cross-env LOCAL_DEV=true npm run dev"
  },
  "files": [
    "dist",
    "designer"
  ],
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.7",
    "ts-node": "latest",
    "typescript": "latest"
  },
  "dependencies": {
    "@repo/common": "*",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "known-css-properties": "^0.35.0",
    "multer": "^1.4.5-lts.1",
    "slugify": "^1.6.6",
    "zod": "^3.23.8"
  },
  "author": "iDegin Technologies",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/idegin/mortar-studio.git"
  },
  "keywords": [
    "mortar-studio",
    "vite",
    "react",
    "server",
    "express"
  ]
}
